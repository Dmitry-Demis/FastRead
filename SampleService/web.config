<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<system.serviceModel>
		<bindings>
			<wsHttpBinding>
				<binding name="wsHttp" messageEncoding="Mtom" maxReceivedMessageSize="5242880">
				</binding>
			</wsHttpBinding>
		</bindings>
		<behaviors>
			<serviceBehaviors>
				<behavior name="mexBehavior">
					<serviceMetadata httpGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="true"/>
				</behavior>
			</serviceBehaviors>
		</behaviors>
		<services>
			<service behaviorConfiguration="mexBehavior"
			         name="SampleService.SendData">
				<endpoint address="SampleService" binding="wsHttpBinding"
				          bindingConfiguration="wsHttp"
				          contract="SampleService.ISendData" />
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8080" />
					</baseAddresses>
				</host>
			</service>
		</services>
	</system.serviceModel>

</configuration>
